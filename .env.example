# ============================================
# Firebase Configuration Template
# ============================================
# Copy this file to .env and fill in the actual values
# NEVER commit .env file to version control
# ============================================

# ============================================
# Environment Selection
# ============================================
# Options: dev, staging, production
FIREBASE_ENV=dev

# ============================================
# Firebase Project IDs
# ============================================
FIREBASE_PROJECT_ID_DEV=smartfleet-pro-dev
FIREBASE_PROJECT_ID_STAGING=smartfleet-pro-staging
FIREBASE_PROJECT_ID_PROD=smartfleet-pro-prod

# ============================================
# Firebase Web App Configuration (DEV)
# ============================================
FIREBASE_API_KEY_DEV=your_api_key_here
FIREBASE_AUTH_DOMAIN_DEV=smartfleet-pro-dev.firebaseapp.com
FIREBASE_PROJECT_ID_DEV=smartfleet-pro-dev
FIREBASE_STORAGE_BUCKET_DEV=smartfleet-pro-dev.appspot.com
FIREBASE_MESSAGING_SENDER_ID_DEV=your_sender_id_here
FIREBASE_APP_ID_DEV=your_app_id_here
FIREBASE_MEASUREMENT_ID_DEV=your_measurement_id_here

# ============================================
# Firebase Web App Configuration (STAGING)
# ============================================
FIREBASE_API_KEY_STAGING=your_api_key_here
FIREBASE_AUTH_DOMAIN_STAGING=smartfleet-pro-staging.firebaseapp.com
FIREBASE_PROJECT_ID_STAGING=smartfleet-pro-staging
FIREBASE_STORAGE_BUCKET_STAGING=smartfleet-pro-staging.appspot.com
FIREBASE_MESSAGING_SENDER_ID_STAGING=your_sender_id_here
FIREBASE_APP_ID_STAGING=your_app_id_here
FIREBASE_MEASUREMENT_ID_STAGING=your_measurement_id_here

# ============================================
# Firebase Web App Configuration (PRODUCTION)
# ============================================
FIREBASE_API_KEY_PROD=your_api_key_here
FIREBASE_AUTH_DOMAIN_PROD=smartfleet-pro-prod.firebaseapp.com
FIREBASE_PROJECT_ID_PROD=smartfleet-pro-prod
FIREBASE_STORAGE_BUCKET_PROD=smartfleet-pro-prod.appspot.com
FIREBASE_MESSAGING_SENDER_ID_PROD=your_sender_id_here
FIREBASE_APP_ID_PROD=your_app_id_here
FIREBASE_MEASUREMENT_ID_PROD=your_measurement_id_here

# ============================================
# Cloud Functions Configuration
# ============================================
FUNCTIONS_REGION=us-central1
FUNCTIONS_RUNTIME=nodejs20

# ============================================
# Firestore Configuration
# ============================================
FIRESTORE_REGION=us-central1

# ============================================
# Cloud Storage Configuration
# ============================================
STORAGE_BUCKET_DEV=smartfleet-pro-dev.appspot.com
STORAGE_BUCKET_STAGING=smartfleet-pro-staging.appspot.com
STORAGE_BUCKET_PROD=smartfleet-pro-prod.appspot.com

# ============================================
# Service Account Keys (for CI/CD)
# ============================================
# Store these in GitHub Secrets, NOT in .env file
# FIREBASE_SERVICE_ACCOUNT_DEV=<base64_encoded_service_account_json>
# FIREBASE_SERVICE_ACCOUNT_STAGING=<base64_encoded_service_account_json>
# FIREBASE_SERVICE_ACCOUNT_PROD=<base64_encoded_service_account_json>

# ============================================
# Billing Alerts Configuration
# ============================================
BILLING_ALERT_THRESHOLD_1=50
BILLING_ALERT_THRESHOLD_2=100
BILLING_ALERT_THRESHOLD_3=200

# ============================================
# Application Configuration
# ============================================
APP_NAME=SmartFleet Pro
APP_PACKAGE_NAME_DEV=com.smartfleetpro.totaltracking.dev
APP_PACKAGE_NAME_STAGING=com.smartfleetpro.totaltracking.staging
APP_PACKAGE_NAME_PROD=com.smartfleetpro.totaltracking

# ============================================
# API URLs (for future use)
# ============================================
API_URL_DEV=https://us-central1-smartfleet-pro-dev.cloudfunctions.net
API_URL_STAGING=https://us-central1-smartfleet-pro-staging.cloudfunctions.net
API_URL_PROD=https://us-central1-smartfleet-pro-prod.cloudfunctions.net
